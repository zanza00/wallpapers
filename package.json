{
  "name": "current-wallpapers-reader-osx",
  "version": "0.0.1",
  "description": "a small utility script to show and open current wallpapers on macosx",
  "main": "out/index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build": "yarn clean && tsc --project tsconfig.json",
    "build:dev": "yarn clean && tsc --project tsconfig-dev.json",
    "run:prod": "yarn build && node build/index.js",
    "start": "yarn build --project tsconfig-dev.json && concurrently \"tsc --project tsconfig-dev.json -w\" \"nodemon build\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Simone Picciani",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.5.2",
    "@types/restify": "^7.2.6",
    "@types/sqlite3": "^3.1.3",
    "concurrently": "^3.6.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.14.3",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "fp-ts": "^1.7.0",
    "restify": "^7.2.3",
    "sqlite3": "^4.0.2"
  }
}
